plugins=(git
	zsh-autosuggestions
	zsh-syntax-highlighting
	themes
	colored-man-pages
	zsh-autopair
	sudo
	extract
	autoupdate
	hacker-quotes
	command-not-found
	brew
	aliases
)
fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src
autoload -U compinit && compinit
source $ZSH/oh-my-zsh.sh


export FZF_DEFAULT_OPTS="--preview 'bat -n --color=always {}'"

export EDITOR='nvim'

#
